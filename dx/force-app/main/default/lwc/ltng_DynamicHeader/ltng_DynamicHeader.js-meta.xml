<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <masterLabel>Dynamic Header</masterLabel>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
            <property name="iconGroup" type="String" datasource="standard,action,custom,utility" default="standard"
                description="The group of the icon (ex: standard, utility, etc)"
            />
            <property name="iconName" type="String" default="partners"
                description="The name of the icon (ex:account or search)"
            />
            <property name="iconAlternativeText" type="String" default="Icon"
                description="The alternative text for screen readers for the icon."
            />
            <property name="title" type="String" default=""
                description="The title of the box"
            />
            <property name="detail" type="String" default=""
                description="The detail text to show beneath the title"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>